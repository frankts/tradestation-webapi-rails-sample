<!DOCTYPE html>
<html>
<head>
  <title>WebAPISample</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= yield :javascript %>
  <%= csrf_meta_tags %>
</head>
<body>
<br/>
<div class="container">
	<div class="row">
		<div class="span12">
			<div class="navbar">
				<div class="navbar-inner">
					<a class="brand" href="<%= root_path %>">TradeStation WebAPI Sample</a>
					<ul class="nav" style="float: right;">
						<% if session[:webapi] != nil %>
						<%= render 'shared/connected_menu' %>
						<% else %> 
						<%= render 'shared/disconnected_menu' %>
						<% end %>
					</ul>					
				</div>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="span12">
			<%= yield %>
		</div>
	</div>
</div>
</body>
</html>
